@{
    ViewBag.Title = "Artists";
    ViewBag.CurrentSection = "Artist";
}

@section Scripts{
    <script type="text/javascript">
        $('a[data-toggle="tooltip"]').tooltip();
    </script>
    @Scripts.Render("~/bundles/JS/Artist")
}
<div id="artist-manager" class="carousel slide" data-bind="with: SO.VM.Current.Artist">
    <div class="carousel-inner">
        <div id="section-artist-view" class="item" data-bind="with: SO.VM.Current.Artist.View">
            <div class="title form-inline">
                <div class="style" style="background-color:#3498db" ></div>
                <div class="title-inner">
                    <p class="text" data-bind="text: Name"></p>
                    <button class="btn btn-info pull-right" data-bind="click: $parent.Navigate.toList">Retour à la liste</button>
                </div>
            </div>
        </div>
        <div id="section-artist-list" class="item active">
            <div class="title form-inline">
                <div class="style" style="background-color: #e74c3c"></div>
                <div class="title-inner">
                    <p class="text">Liste des Artistes</p>
                    <button class="btn btn-danger pull-right" data-bind="click: create">Ajouter</button>
                    <input class="pull-right" type="text" placeholder="Titre de l'album" name="AlbumName" data-bind="value: New.Name"/>
                </div>
            </div>
            <!-- ko with: Collection -->
            <div class="album-list" data-bind="foreach: Items">
                @Html.Partial("_Artist")
            </div>
            <!-- /ko -->
        </div>
        <div id="section-artist-create" class="item" data-bind="with: New">
            <div class="title form-inline">
                <div class="style" style="background-color: #18bc9c"></div>
                <div class="title-inner">
                    <p class="text" data-bind="text: 'Nouvel Artiste : ' + Name()"></p>
                    <button class="btn btn-success pull-right" data-bind="click: function () { $parent.addArtist($data); }">Ajouter</button>
                    <button class="btn btn pull-right" data-bind="click: $parent.list">Retour</button>
                </div>
            </div>
            <div class="artist-create">
                @Html.Partial("_ArtistForm")
            </div>
        </div>
    </div>
</div>
